<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/ex3_btn1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="26dp"
        android:text="Btn1" />

    <Button
        android:id="@+id/ex3_btn2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ex3_btn1"
        android:layout_centerHorizontal="true"
        android:text="Btn2" />

    <TextView
        android:id="@+id/ex3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ex3_btn2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="ResultText"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/ex3_btn3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ex3_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:text="Btn3" />

</RelativeLayout>
