<script>
	$(document).ready(function(){
		$('#btn').click(function(){
			//navigator 객체의 userAgent 속성을 사용해서
			//클라이언트(웹브라우저)의 정보를 출력해줌
			var userAgent = navigator.userAgent;
			console.log("Client Device : "+userAgent);
			alert(userAgent);
		});
	});
</script>
