<script>
	$(document).ready(function(){
		$(window).bind('orientationchange', function(){
			//alert(window.orientation);
			if(window.orientation === 0){
				$('body').css('background','pink').html('hi!!');
				
			}else{
				$('body').css('background','blue').html('good!!');
			}
		});

	});
</script>
